@page "/bind"
@rendermode InteractiveServer

@*

	rendermode:
	- None (Sem interatividade): Vazio
	- Server: InteractiveServer
	- WebAssembly: InteractiveWebAssembly
	- Auto (Server > WebAssembly): InteractiveAuto

*@

<h1 class="display-4">Bind</h1>

<div>
	@*
		Bind - One-Way (Unidirecional): { get; }
	*@
	<p>@texto</p>
</div>

<div>
	@*
		Bind - Two-Way (Bidirecional): { get; set; }
	*@
	<input @bind = "texto" class="form-control"/>
</div>
<div class="mt-3">
	<input @bind = "texto" @bind:event="oninput" class="form-control"/>
</div>
<div class="mt-3">
	<input @bind:event = "oninput" @bind:get = "texto" @bind:set="(value)=> {texto = value!;}" class="form-control"/>
</div>
	
<div class="mt-3">
	<input value="@texto" @oninput="((e) => texto = e.Value!.ToString()!)" class="form-control alert alert-dark"/>
</div>


@code {
	private string texto { get; set; } = "Eu sou um texto!";
}
